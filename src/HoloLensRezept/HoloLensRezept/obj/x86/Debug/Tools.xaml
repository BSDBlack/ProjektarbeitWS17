<Page
    x:Class="HoloLensRezept.Tools"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HoloLensRezept"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='1' HorizontalAlignment="Left" Height="200" Margin="20,20,0,0" VerticalAlignment="Top" Width="188"                     >
            <StackPanel>
                <Image Source="Assets/zurueck_Pikto.svg" Width="160" Height="162" />
                <TextBlock Text="Zurück" Foreground="Black"
                   HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Left" Height="200" Margin="20,240,0,0" VerticalAlignment="Top" Width="188">
            <StackPanel>
                <Image Source="Assets/Wecker_Pikto.png" Height="162"/>
                <TextBlock Text="Wecker" Foreground="Black"
                   HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Left" Height="200" Margin="228,240,0,0" VerticalAlignment="Top" Width="188">
            <StackPanel>
                <Image Source="Assets/Einkaufsliste_Pikto.png" Height="162"/>
                <TextBlock Text="Einkaufsliste" Foreground="Black"
                   HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</Page>

